<% locals.title = 'New Folder' %>
<%- include('partials/top') %>

<h1><%= title %></h1>
<%- include('partials/errors') %>

<form action="/folders/create" method="post">
  <%- include('partials/input', {
    type     : 'text',
    name     : 'name',
    label    : 'Name',
    required : true,
    value    : locals.data?.name,
  }) %>

  <button type="submit">Create</button>
  <a href="/folders" class="button">Cancel</a>
</form>

<%- include('partials/bot') %>
