<% locals.title = 'Delete Folder' %>
<%- include('partials/top') %>

<h1><%= title %></h1>
<p>
  Are you sure you want to delete this folder? This action is irreversible! All
  associated files will be lost.
</p>

<form action="/folders/<%= locals.data.id %>/delete" method="post">
  <button type="submit">Delete</button>
  <a href="/folders/<%= locals.data.id %>" class="button">Cancel</a>
</form>

<%- include('partials/bot') %>
