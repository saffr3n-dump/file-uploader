<% locals.title = 'Rename Folder' %>
<%- include('partials/top') %>

<h1><%= title %></h1>

<form action="/folders/<%= folder.id %>/rename" method="post">
  <%- include('partials/input', {
    type     : 'text',
    name     : 'name',
    label    : 'Name',
    required : true,
    value    : folder.name,
  }) %>

  <button type="submit">Rename</button>
  <a href="/folders/<%= folder.id %>" class="button">Cancel</a>
</form>

<%- include('partials/bot') %>
