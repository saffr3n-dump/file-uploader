<% locals.title = 'Delete File' %>
<%- include('partials/top') %>

<h1><%= title %></h1>
<p>
  Are you sure you want to delete this file? This action is irreversible!
</p>

<form
  action="/folders/<%= locals.data.folderId %>/files/<%= locals.data.id %>/delete"
  method="post"
>
  <button type="submit">Delete</button>
  <a href="/folders/<%= locals.data.folderId %>" class="button">Cancel</a>
</form>

<%- include('partials/bot') %>
